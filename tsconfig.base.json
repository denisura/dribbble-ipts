{
  "compileOnSave": false,
  "compilerOptions": {
    "rootDir": ".",
    "sourceMap": true,
    "declaration": false,
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "importHelpers": true,
    "target": "es2015",
    "module": "esnext",
    "lib": ["es2020", "dom"],
    "skipLibCheck": true,
    "skipDefaultLibCheck": true,
    "baseUrl": ".",
    "paths": {
      "@ipts/company-ui-footer": ["libs/company/ui/footer/src/index.ts"],
      "@ipts/company-ui-header": ["libs/company/ui/header/src/index.ts"],
      "@ipts/company-ui-layout": ["libs/company/ui/layout/src/index.ts"],
      "@ipts/company-ui-navigation-drawer": [
        "libs/company/ui/navigation-drawer/src/index.ts"
      ],
      "@ipts/company-ui-theme-provider": [
        "libs/company/ui/theme-provider/src/index.ts"
      ],
      "@ipts/rail-ui-theme-provider": [
        "libs/rail/ui/theme-provider/src/index.ts"
      ],
      "@ipts/shared-data-navigation-provider": [
        "libs/shared/data/navigation-provider/src/index.ts"
      ],
      "@ipts/shared-router": ["libs/shared/router/src/index.ts"],
      "@ipts/shared-ui-theme": ["libs/shared/ui/theme/src/index.ts"],
      "@ipts/shared-ui-theme-provider": [
        "libs/shared/ui/theme-provider/src/index.ts"
      ],
      "@ipts/storybook-host": ["libs/storybook-host/src/index.ts"],
      "@ipts/travel-ui-theme-provider": [
        "libs/travel/ui/theme-provider/src/index.ts"
      ]
    }
  },
  "exclude": ["node_modules", "tmp"]
}
