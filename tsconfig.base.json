      ],
      "@ipts/core-data-navigation-provider": [
        "libs/core/data/navigation-provider/src/index.ts"
      ],
      "@ipts/core-hooks": ["libs/core/hooks/src/index.ts"],
      "@ipts/core-router": ["libs/core/router/src/index.ts"],
      "@ipts/core/ui": ["libs/core/ui/src/index.ts"],
      "@ipts/rail-data-alert-provider": [
        "libs/rail/data/alert-provider/src/index.ts"
      ],
      "@ipts/rail-data-navigation-provider": [
        "libs/rail/data/navigation-provider/src/index.ts"
      ],
      "@ipts/rail-ui": ["libs/rail/ui/src/index.ts"],
